<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                tools:context=".MainActivity"
                android:id="@+id/rl1">

    <Button
        android:id="@+id/textView1"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mypic"
        android:layout_alignParentStart="true"/>



    <TextView
        android:id="@+id/nameText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Seetha Annamraju"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:id="@+id/button3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ALLERGENS"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegan"
        android:id="@+id/checkBox"
        android:checked="true"
        android:layout_below="@+id/textViewAllergen"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetarian"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  +"
        android:width="20dp"
        android:height="20dp"
        android:background="@color/bite_blue"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView14"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pescatarian"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/view3"
        android:layout_below="@+id/checkBox3"
        android:layout_alignEnd="@+id/textView14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DIETARY PREFERENCE"
        android:id="@+id/textViewAllergen"
        android:textStyle="bold"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  +"
        android:width="20dp"
        android:height="20dp"
        android:id="@+id/textView10"
        android:background="@color/bite_blue"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  +"
        android:width="20dp"
        android:height="20dp"
        android:id="@+id/textView12"
        android:background="@color/bite_blue"
        android:textColor="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  +"
        android:width="20dp"
        android:height="20dp"
        android:id="@+id/textView13"
        android:background="@color/bite_blue"
        android:textColor="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peanuts"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soy"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/checkBox5"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gluten"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/checkBox6"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/textView19"
        android:layout_below="@+id/checkBox7"
        android:layout_alignEnd="@+id/textView14"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11"
        android:layout_below="@+id/checkBox3"
        android:layout_alignEnd="@+id/textView14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AVOID"
        android:id="@+id/textView15"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushrooms"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:checked="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  +"
        android:width="20dp"
        android:height="20dp"
        android:id="@+id/textView16"
        android:background="@color/bite_blue"
        android:textColor="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/checkBox8"
        android:layout_alignEnd="@+id/textView13"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggplant"
        android:id="@+id/checkBox9"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true"
        android:checked="false"/>

</RelativeLayout>